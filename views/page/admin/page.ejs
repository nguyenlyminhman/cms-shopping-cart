<% include ../../layout/admin/header %>

    <div class="rows">
        <div class="text-center">
            <h1>
                <%= breadscrum%>
            </h1>
        </div>

        <a href="/admin/page/add-page" class="btn btn-info float-right"> Add new </a>
    </div>
    <br/><br/>
    <div class="rows">
        <table class="table table-hover table-dark" id="table_page">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                <% let i = 1 %>
                    <% page.forEach(data=>{%>
                        <tr>
                            <th scope="row">
                                <%=i++%>
                            </th>
                            <td>
                                <%=data.title%>
                            </td>
                            <td>
                                <a href="/admin/page/edit/<%=data.slug%>">
                                <img src="/img/pencil.png" /> </a> || 
                                <a href="/admin/page/delete/<%=data._id%>">
                                <img src="/img/delete.png" /> 
                            </a>
                            </td>
                        </tr>
                        <%})%>
            </tbody>
        </table>
    </div>

    <% include ../../layout/admin/footer %>