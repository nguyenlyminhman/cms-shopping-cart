<% include ../../layout/admin/header %>

    <div class="rows">
        <div class="text-center">
            <h1>
                <%= breadscrum%>
            </h1>
        </div>
        <a href="/admin/product/add-product" class="btn btn-info float-right"> Add new </a>
    </div>
    <br/>
    <% include errors %>
        <% include message %>
            <br/>
            <div class="rows">
                <table class="table table-hover table-dark" id="table_page">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Category</th>
                            <th scope="col" style="width: 15%;">Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if (product.length <= 0){%>
                            <tr>
                                <td colspan="5">
                                    <h1 class="text-center"> Product is empty </h1>
                                </td>
                            </tr>
                            <%}else{%>
                                <% product.forEach(data=>{%>
                                    <tr id="id_<%=data._id%>" class="<%=data.slug%>">
                                        <td>
                                            <%=data.image%>
                                        </td>
                                        <td>
                                            <%=data.name%>
                                        </td>
                                        <td>
                                            <%=data.price%>
                                        </td>
                                        <td>
                                            <%=data.category%>
                                        </td>
                                        <td>
                                            <a href="/admin/product/edit/<%=data._id%>">
                                                <img src="/img/pencil.png" />
                                            </a>
                                            ||
                                            <a href="/admin/product/delete/<%=data._id%>">
                                                <img src="/img/delete.png" />
                                            </a>
                                        </td>
                                    </tr>
                                    <%})%>
                                        <%}%>
                    </tbody>
                </table>
            </div>
            <% include ../../layout/admin/footer %>